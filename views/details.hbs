<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<title>Cubicle</title>
		<link href="/css/site.css" type="text/css" rel="stylesheet" />
		<link
			rel="shortcut icon"
			type="image/x-icon"
			href="/images/favicon.png"
		/>
	</head>

	<body>
		<div class="container">

			<header>
				<ul>
					<li><img class="logo" src="/images/logo.png" /></li>
					<li><a href="/">Browse</a></li>
					<li><a href="/about">About</a></li>
					{{#if isAuthenticated}}
						<li><a href="/create">Add a Cube</a></li>
						<li><a href="/create/accessory">Add Accessory</a></li>
						<li><a href="/logout">Logout</a></li>
					{{else}}
						<li><a href="/login">Login</a></li>
						<li><a href="/register">Register</a></li>
					{{/if}}

				</ul>
			</header>

		<h1>{{cube.name}}</h1>
		<img class="cube" src="{{cube.imageUrl}}">
		<div class="details">
		<p><span>Description:</span> {{cube.description}}</p>
		<p><span>Difficulty level:</span> {{cube.difficulyLevel}}</p>
		<div style="text-align: center">
			<a class="btn" href="/">Back</a>
			{{#if isAuthenticated}}
			{{!-- {{#if owner}} --}}
			<a class="btn" href="/attach/accessory/{{cube._id}}">Attach Accessory</a>
			<a class="btn" href="/edit/{{cube._id}}">Edit</a>
			<a class="btn" href="/delete/{{cube._id}}">DELETE</a>
			{{/if}}
			{{!-- {{/if}} --}}
		</div>
		</div>
		<h2>Accessories</h2>
		<div class="accessories">
			{{#each accessories}}
				<div class="accessory">
					<img src="{{imageUrl}}" alt="stickerName" />
					<h3>{{name}}</h3>
					<p>{{description}}</p>
				</div>
			{{else}}
				<h3 class="italic">This cube has no accessories yet...</h3>
			{{/each}}
		</div>

		<footer>@Cubicle: Exercise for Express.js and Handlebars</footer>
	</body>

</html>